import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
		System.out.println("Enter your choice   : 1.Hi 2.Hello 3.Hey");
		int a=sc.nextInt();
		switch(a)
		{
		    case 1:
		        System.out.println("you said Hi");
		            break;
		    case 2:
		        System.out.println("you said Hello");
		            break;
		    case 3:
		        System.out.println("you said Heyy");
		            break;
		            
		}
	}
}
